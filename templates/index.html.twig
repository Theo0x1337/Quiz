{% extends 'base.html.twig' %}

{% block additionnal_stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/Carousel-Hero.css') }}">
{% endblock %}

{% block content %}
    <div class="carousel slide" data-ride="carousel" id="carousel-1">
        <div class="carousel-inner" role="listbox">
            {% for key, quiz in quizzes %}
                <div class="carousel-item {{ key == 0 ? 'active': '' }}">
                    <div class="jumbotron carousel-hero" style="background-image: url('{{ asset('uploads/' ~ quiz.image) }}');">
                        <h1 class="hero-title">{{ quiz.nom }}</h1>
                        <p class="hero-subtitle">{{ quiz.sousTitre }}</p>
                        <p><a class="btn btn-primary btn-lg hero-button" role="button" href="{{ path('play',{'id':quiz.id}) }}">Participer Ã  ce quiz</a></p>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div>
            <a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev">
                <i class="fa fa-chevron-left"></i>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-1" role="button" data-slide="next">
                <i class="fa fa-chevron-right"></i>
                <span class="sr-only">Next</span></a>
        </div>
        <ol class="carousel-indicators">
            {% for key in quizzes|keys %}
                <li data-target="#carousel-1" data-slide-to="{{ key }}" {{ key == 0 ? 'class="active"': '' }}></li>
            {% endfor %}
        </ol>
    </div>
{% endblock %}
