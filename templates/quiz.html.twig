{% extends 'base.html.twig' %}

{% block additionnal_stylesheets %}
    <link rel="stylesheet" href="css/Card-Group1-Shadow.css">
    <link rel="stylesheet" href="css/Navigation-with-Button.css">
{% endblock %}

{% block content %}



    <div class="container" id="cards">
        <div class="row">
            {% for quiz in quizzes %}
                <div class="col-lg-4">
                    <div class="card mb-4 box-shadow rounded-0"><img class="card-img-top w-100 d-block rounded-0" src="{{ asset('uploads/' ~ quiz.thumbnail) }}">
                        <div class="card-body">
                            <h4 class="card-title">{{ quiz.nom }}</h4>
                            <h6 class="text-muted card-subtitle mb-2">{{ quiz.sousTitre }}</h6>
                            <p class="card-text">{{ quiz.description }}<br><br><br></p>

                            <div class="row">
                                <div class="col-4">
                                    <a href="{{ path('play',{'id':quiz.id}) }}">
                                        <button class="btn btn-primary btn-block">Jouer</button>
                                    </a>
                                </div>
                                <div class="col-8">
                                    <a href="{{ path('ajouter-question',{'id':quiz.id}) }}">
                                        <button class="btn btn-secondary btn-block">Ajouter une question</button>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            {% endfor %}

            <bouton class="btn btn-primary btn-block text-center">Ajouter votre propre quiz !</bouton>
        </div>
    </div>

{% endblock %}
