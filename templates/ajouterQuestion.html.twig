{% extends 'base.html.twig' %}

{% block content %}

    <h2>Ajouter une question</h2>
    <div class="mb-4 box-shadow rounded-0">
        <form>
            <div class="form-group row">
                <label for="question" class="col-sm-2 col-form-label">Question</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="question">
                </div>
            </div>

            <div class="form-group row">
                <label for="bonneRep" class="col-sm-2 col-form-label">Bonne réponse</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="bonneRep">
                </div>
            </div>

            <div class="form-group row">
                <label for="mauvaiseRep1" class="col-sm-2 col-form-label">Mauvaise réponse 1</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="mauvaiseRep1">
                </div>
            </div>

            <div class="form-group row">
                <label for="mauvaiseRep2" class="col-sm-2 col-form-label">Mauvaise réponse 2</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="mauvaiseRep2">
                </div>
            </div>

            <div class="form-group row">
                <label for="mauvaiseRep3" class="col-sm-2 col-form-label">Mauvaise réponse 3</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="mauvaiseRep3">
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </div>
            </div>
        </form>
    </div>


{% endblock %}