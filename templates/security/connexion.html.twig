{% extends 'security/base.html.twig' %}

{% block additionnal_stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/Login-Form-Clean.css') }}">
{% endblock %}

{% block content %}
    <div class="login-clean d-flex align-items-center">
        <form method="post">
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><i class="icon ion-ios-navigate"></i></div>
            <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Email"></div>
            <div class="form-group"><input class="form-control" type="password" name="password" placeholder="mot de passe"></div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Connexion</button></div>
            <a class="forgot" href="#">Mot de passe oubli√© ?</a>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
    </div>
{% endblock %}
