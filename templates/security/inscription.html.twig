{% extends 'security/base.html.twig' %}
{% form_theme form 'form/security.html.twig' %}

{% block additionnal_stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/Registration-Form-with-Photo.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.min.js"></script>
    <script src="{{ asset('js/inscription.js') }}"></script>
{% endblock %}


{% block content %}
    <div class="register-photo d-flex align-items-center">
        <div class="form-container">
            <div class="image-holder"></div>
            {{ form_start(form) }}
            <h2 class="text-center"><strong>Créez un compte !</strong></h2>
            <div id="error">
                {% if not form.vars.valid %}
                    <div class="alert alert-error">
                        {% for children in form.children %}
                            {% if not children.vars.valid %}
                                {{ form_errors(children) }}
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
                {% if erreur is defined %}
                    <div class="alert alert-danger" role="alert">
                        {{ erreur }}
                    </div>
                {% endif %}
            </div>
            {{- form_rest(form) -}}
            <div class="form-group"><button class="btn btn-primary btn-block" id="submit">Inscription</button></div>
            <a class="already" href="{{ path('connexion') }}">Déja enregistré ? connectez vous ici</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
