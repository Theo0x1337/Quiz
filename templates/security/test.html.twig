{% extends 'base.html.twig' %}

{% block additionnal_stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/Registration-Form-with-Photo.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.min.js"></script>
    <script src="{{ asset('js/inscription.js') }}"></script>
{% endblock %}


{% block content %}
    <div class="register-photo">
        <div class="form-container">
            <div class="image-holder"></div>
            {{ form_start(form) }}
                <h2 class="text-center"><strong>Créez un compte !</strong></h2>
                <div id="error">
                    {{ form_errors(form) }}
                    {% if erreur is defined %}
                        <div class="alert alert-danger" role="alert">
                            {{ erreur }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <input
                            class="form-control"
                            type="email"
                            name="{{ form.email.vars.name }}"
                            id="{{ form.email.vars.id }}"
                            placeholder="{{ form.email.vars.label }}"
                            {{ form.email.vars.required ? 'required' }}
                    >
                </div>
                {% for var in [form.prenom,form.nom] %}
                <div class="form-group">
                    <input
                            class="form-control"
                            name="{{ var.vars.name }}"
                            id="{{ var.vars.id }}"
                            placeholder="{{ var.vars.label }}"
                            {{ var.vars.required ? 'required' }}
                    >
                </div>
                {% endfor %}
            {% for passwordField in form.mdpClair %}
                <div class="form-field">
                    <div class="form-group">
                        <input
                                class="form-control"
                                type="password"
                                name="{{ passwordField.vars.name }}"
                                id="{{ passwordField.vars.id }}"
                                placeholder="{{ passwordField.vars.label }}"
                                {{ passwordField.vars.required ? 'required' }}
                        >
                    </div>
                </div>
            {% endfor %}
                <div class="form-group"><button class="btn btn-primary btn-block" id="submit">Inscription</button></div>
                <a class="already" href="#">Déja enregistré ? connectez vous ici</a>
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}
